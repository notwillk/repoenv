{
  "name": "repoenv",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "repoenv": "dist/index.cjs"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:command && npm run build:schema:config && npm run build:schema:service",
    "build:command": "tsup",
    "build:schema:config": "tsx scripts/emitConfigSchema.ts > dist/config.schema.json",
    "build:schema:service": "tsx scripts/emitServiceSchema.ts > dist/service.schema.json",
    "clean": "rm -rf dist",
    "clean:deep": "rm -rf dist node_modules",
    "dev": "concurrently --kill-others --kill-signal SIGTERM --names 'cli','config schema','service schema' 'npm run dev:command:pre && (npm run dev:command || true) && npm run dev:command:post' 'npm run dev:schema:config' 'npm run dev:schema:service'",
    "dev:command": "tsup --watch",
    "dev:command:post": "npm unlink -g repoenv --silent --loglevel=error || true",
    "dev:command:pre": "npm link --silent --no-audit --no-fund --loglevel=error",
    "dev:schema:config": "nodemon --quiet --signal SIGTERM --watch . --ext ts,tsx --exec 'pnpm run build:schema:config'",
    "dev:schema:service": "nodemon --quiet --signal SIGTERM --watch . --ext ts,tsx --exec 'pnpm run build:schema:service'",
    "static": "npm run lint && npm run typecheck",
    "typecheck": "npx tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "coverage:open": "vite-node -e 'import(\"open\").then(m=>m.default(\"coverage/index.html\"))' || true",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "prepush": "npm run static && npm run test",
    "pretest": "npm run build:command"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "@types/node": "^24.3.0",
    "@types/picomatch": "^4.0.2",
    "@types/toposort": "^2.0.7",
    "@types/validator": "^13.15.3",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vitest": "^0.5.4",
    "execa": "^9.6.0",
    "husky": "^8.0.0",
    "prettier": "^3.6.2",
    "tempy": "^3.1.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/source-map-support": "^0.5.10",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "nodemon": "^3.1.10",
    "picomatch": "^4.0.3",
    "source-map-support": "^0.5.21",
    "string-env-interpolation": "^1.0.1",
    "toposort": "^2.0.2",
    "validator": "^13.15.15",
    "yaml": "^2.8.1",
    "zod": "^4.1.1"
  }
}
